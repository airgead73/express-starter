<section class="container">
  <div class="row">
    <div class="col-md-4 bg-secondary d-flex align-items-center justify-content-center">
      <h3 class="text-center text-white">
        {{project.code}}
        <a href="/projects/update/{{project._id}}" class="btn btn-primary" title="add project">edit</a>
      </h3>
      
    </div>
    <div class="col-md-8">
      <h2>{{project.title}}</h2>
      <h3>{{project.code}}</h3>
      <p>{{project.desc}}</p>
      <p><a href="/projects/{{project._id}}/items/add">add item</a></p>
      <hr>
      {{#if project.items}}
      <p>
        {{#each project.items}}
        <a href="/projects/{{project._id}}/items/{{this._id}}">{{this.title}}</a>&nbsp;|&nbsp;
        {{/each}}
      </p> 
      {{else}}
      <p>has no items</p>
      {{/if}}
    </div>
  </div>  
</section>